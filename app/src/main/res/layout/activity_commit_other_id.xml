<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            style="@style/click"
            android:id="@+id/out"
            android:src="@mipmap/leftback"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="其他入住人信息"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_opinion"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="60dp"
            android:background="@drawable/butten_background_black"
            android:gravity="center"
            android:layout_height="25dp">
            <!--<ImageView
                android:background="@drawable/image_me_add"
                android:layout_width="12dp"
                android:layout_height="12dp" />-->
            <TextView
                android:id="@+id/commit"
                style="@style/click"
                android:text="提 交"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/match_line"/>
    <TextView
        android:layout_marginTop="20dp"
        android:text="填写手机号码"
        android:textColor="@color/gray_cut_clorr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@null"
        android:id="@+id/et_phone"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="@color/gren_cut_clorr"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/match_line"/>



    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_front"
                android:background="@color/gray1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/front"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:id="@+id/iv_plus"
                    android:src="@drawable/image_nav_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginTop="3dp"
                    android:text="正 面"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/x15"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_verso"
                android:background="@color/gray1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/verso"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:id="@+id/iv_plus1"
                    android:src="@drawable/image_nav_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginTop="3dp"
                    android:text="反 面"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>