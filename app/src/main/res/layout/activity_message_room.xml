<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/x20"
            style="@style/click"
            android:id="@+id/out"
            android:src="@mipmap/leftback"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:paddingRight="@dimen/x30"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitle"
                android:text="其他消息"
                android:layout_marginRight="10dp"
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/tvAllArea"
                android:src="@drawable/room_security"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Spinner
            android:id="@+id/room_spinner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </Spinner>
        <!--<LinearLayout
            android:layout_width="70dp"
            android:background="@drawable/butten_background_black"
            android:gravity="center"
            android:layout_height="32dp">
            <ImageView
                android:background="@drawable/image_message_connect"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <TextView
                android:text="房 东"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>-->

    </LinearLayout>

    <View
        android:id="@+id/tvRiskArea"
        android:layout_marginTop="10dp"
        style="@style/match_line"/>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:paddingRight="@dimen/x20"
        android:paddingLeft="@dimen/x20"
        android:id="@+id/recycler_view"
        app:layout_empty="@layout/view_empty"
        app:layout_progress="@layout/view_progress"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </com.jude.easyrecyclerview.EasyRecyclerView>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:id="@+id/ll_phone"
        android:background="@color/orange_cut_clorr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:text="联系房东"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
