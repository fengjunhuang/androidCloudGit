<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    >
    <include
        android:id="@+id/include_title"
        layout="@layout/item_title"
        />
    <LinearLayout
        android:layout_width="@dimen/x250"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"


        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付详情"

        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="支付项目"
               android:layout_weight="1"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付款项"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房租"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_fangzu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水费"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_shuifei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电费"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_dianfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="249"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他费用"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_qita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="106"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他费用"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计1165元"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_marginTop="20dp"
        style="@style/match_line_dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
 <ImageView
     android:layout_width="35dp"
     android:layout_height="35dp"
     android:src="@drawable/wchat_image_pay"
     />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:layout_marginLeft="10dp"
            style="@style/room_text_style"
            android:layout_gravity="center"
            android:layout_weight="1"
        />
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    </LinearLayout>
    <View

        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        style="@style/match_line"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/api_pay"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            android:layout_marginLeft="10dp"
            style="@style/room_text_style"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <CheckBox
            android:layout_gravity="center"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View

        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        style="@style/match_line"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/api_pay"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现金支付"
            android:layout_marginLeft="10dp"
            style="@style/room_text_style"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <CheckBox
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_guide_enter"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_green"
        android:padding="8dp"
        android:text="支付:1165.00元"
        android:textColor="@android:color/white"
        android:textSize="17sp"

       />
</LinearLayout>