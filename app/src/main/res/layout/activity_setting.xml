<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            style="@style/click"
            android:id="@+id/out"
            android:src="@mipmap/leftback"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/title"
            android:layout_gravity="center_vertical"
            android:text="设置"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="19sp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="50dp"
            android:background="@drawable/butten_background_red"
            android:gravity="center"
            android:layout_height="25dp">

            <TextView
                android:text="注 销"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11sp"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        style="@style/match_line"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="账号设置"
                style="@style/setting_color_bar_style" />

            <RelativeLayout
                android:id="@+id/rl_number"
                style="@style/me_item_rl_style">
                <TextView
                    android:id="@+id/tv_number"
                    android:text="手机号绑定"
                    style="@style/me_text_style" />
                <TextView
                    android:text="15088113450"
                    android:layout_alignParentRight="true"
                    style="@style/me_text_style" />
            </RelativeLayout>
            <View style="@style/match_line"/>
            <RelativeLayout
                android:id="@+id/rl_connect"
                style="@style/me_item_rl_style">
                <TextView
                    android:text="重置密码"
                    style="@style/me_text_style" />
            </RelativeLayout>
            <View style="@style/match_line"/>
            <RelativeLayout
                android:id="@+id/rl_touch"
                style="@style/me_item_rl_style">
                <TextView
                    android:text="手势登陆"
                    style="@style/me_text_style" />
                <Switch
                    android:id="@+id/s_touch"
                    style="@style/setting_switch_style" />
            </RelativeLayout>

            <TextView
                android:text="第三方账号绑定"
                style="@style/setting_color_bar_style" />

            <RelativeLayout
                android:id="@+id/rl_wechat"
                style="@style/me_item_rl_style">
                <TextView
                    android:text="微信"
                    style="@style/me_text_style" />
                <Switch
                    android:id="@+id/s_wechat"
                    style="@style/setting_switch_style" />
            </RelativeLayout>
            <View style="@style/match_line"/>

            <RelativeLayout
                android:id="@+id/rl_sina"
                style="@style/me_item_rl_style">
                <TextView
                    android:text="新浪微博"
                    style="@style/me_text_style" />
                <Switch
                    android:id="@+id/s_sina"
                    style="@style/setting_switch_style" />
            </RelativeLayout>
            <View style="@style/match_line"/>
            <RelativeLayout
                android:id="@+id/rl_ali"
                style="@style/me_item_rl_style">
                <TextView
                    android:text="支付宝"
                    style="@style/me_text_style" />
                <Switch
                    android:id="@+id/s_ali"
                    style="@style/setting_switch_style" />
            </RelativeLayout>
            <View style="@style/match_line"/>
            <RelativeLayout
                android:id="@+id/rl_qq"
                style="@style/me_item_rl_style">
                <TextView
                    android:text="QQ"
                    style="@style/me_text_style" />
                <Switch
                    android:id="@+id/s_qq"
                    style="@style/setting_switch_style" />
            </RelativeLayout>
            <View style="@style/match_line"/>

            <TextView
                android:text="消息通知"
                style="@style/setting_color_bar_style" />

            <RelativeLayout
                android:id="@+id/rl_message"
                style="@style/me_item_rl_style">
                <TextView
                    android:text="消息通知设置"
                    style="@style/me_text_style" />
                <Switch
                    android:id="@+id/s_message"
                    style="@style/setting_switch_style" />
            </RelativeLayout>
            <View style="@style/match_line"/>


        </LinearLayout>
    </ScrollView>



</LinearLayout>