<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/butten_background_w"
    android:layout_height="match_parent">
    <TextView
        android:text="请选择退房日期"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="点击选择退房日期"
        android:id="@+id/data"
        android:background="@drawable/textview_background_blue"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View style="@style/match_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="确认"
            android:id="@+id/btn_common_dialog_double_left"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:text="取消"
            android:id="@+id/btn_common_dialog_double_right"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>