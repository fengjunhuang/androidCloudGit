<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tvTitle"
            android:text="其他消息"
            android:textColor="@color/light_black"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tvAllArea"
            android:src="@drawable/room_security"
            android:layout_width="@dimen/x15"
            android:layout_toRightOf="@id/tvTitle"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/x10"
            android:src="@drawable/image_message_connect"
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/x5"
        android:id="@+id/tvRiskArea"
        style="@style/match_line"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabBackground="@android:color/white"
        app:tabIndicatorColor="@color/orange_cut_clorr"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/orange_cut_clorr"
        app:tabTextColor="@android:color/darker_gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
</LinearLayout>