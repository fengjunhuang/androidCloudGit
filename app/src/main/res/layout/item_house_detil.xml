<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   android:padding="@dimen/x10"


    >
    <ImageView
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y80"
        android:src="@mipmap/zufang"
        android:layout_marginRight="@dimen/x20"
        />
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"


     >
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"


         >
     <TextView
         android:layout_width="@dimen/y20"
         android:layout_height="@dimen/x15"
           android:background="@drawable/textview_round_border"
         android:textColor="@color/white"
         android:gravity="center"
         android:text="云门"
         android:textSize="10sp"
         android:textStyle="bold"

         />
     <TextView
       android:layout_marginLeft="@dimen/x5"
       android:layout_height="wrap_content"
         android:layout_width="wrap_content"

         android:textStyle="bold"

         android:text="已经验证.剩3间"
         android:textSize="11sp"


         />
     </LinearLayout>
     <TextView
         android:layout_marginTop="@dimen/x10"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="东圃镇明珠新村"
         style="@style/head_title_style"

         />
     <TextView
         android:layout_marginTop="@dimen/x10"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="阳光好,临地铁5号线,带空调热水器"

         android:textSize="11sp"
         />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
     <TextView
         android:layout_marginTop="@dimen/x10"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="最低:   "
         android:textColor="@color/red"

         android:textSize="10sp"
         />
         <TextView
             android:layout_marginTop="@dimen/x10"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="$280"
             android:textColor="@color/black"
             android:textStyle="bold"

             android:textSize="10sp"
             />
         <TextView
             android:layout_marginTop="@dimen/x10"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="/月"
             android:textColor="@color/red"

             android:textSize="8sp"
             />
 </LinearLayout>

 </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>